{
  "version": 2,
  "name": "pdf-extract-app",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/$1"
    }
  ],
  "functions": {
    "api/upload.js": {
      "maxDuration": 30
    },
    "api/ocr.js": {
      "maxDuration": 60
    }
  }
}