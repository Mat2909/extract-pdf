{
  "name": "pdf-extract-frontend",
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://votre-backend.railway.app/api/$1"
    }
  ],
  "env": {
    "VITE_API_URL": "https://votre-backend.railway.app"
  }
}